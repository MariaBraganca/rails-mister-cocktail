<%= cl_image_tag("blyvqt2judffrqw82qtn", :class => 'banner') %>
<div class="container">
	<h1>All Cocktails</h1>
	<div class="d-flex">
		<% @cocktails.each do |cocktail| %>
			<div class="card my-3 mr-3" style="width: 18rem;">
				<%= cl_image_tag cocktail.photo.key, :class => 'card-img-top' %>
				<div class="card-body">
					<h5><i class="fas fa-cocktail"></i> <%= cocktail.name %></h5>
					<%= link_to 'See more details', cocktail_path(cocktail) %>
				</div>
			</div>		
		<% end %>
	</div>
	<%= link_to "Add a new cocktail", new_cocktail_path, :class => "btn btn-primary" %>
</div>