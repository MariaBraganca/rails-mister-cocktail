<div class="container">
	<!-- Cocktails -->
	<div class="row justify-content-center my-5">
		<% @cocktails.each do |cocktail| %>
			<div class="col-3 px-0 drink">
				<div class="effect-1"></div>
				<div class="effect-2"></div>
				<%= link_to cocktail_path(cocktail) do %>
					<% if cocktail.photo.attached? %>
						<div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= cl_image_path(cocktail.photo.key) %>)">
					<% else %>
						<div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path(cocktail.thumb_url) %>)">
					<% end %>
							<svg width="100%" height="100%" viewBox="0 0 200 200">
								<path id="curve" 
									d="
										M 20,100
										a 80,80 0 0,1 160,0
										a 80,80 0 0,1 -160,0
										"
								/>
								<text dx="30" dy="5">
									<textPath xlink:href="#curve">
										- <%= cocktail.name %> -
									</textPath>
								</text>
							</svg>
						</div>
				<% end %>
			</div>
		<% end %>	
	</div>
</div>
