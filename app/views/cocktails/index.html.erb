<%#= cl_image_tag("blyvqt2judffrqw82qtn", :class => 'banner') %>
<div class="container">
	<div class="row mt-5">
		<div class="col-12 d-flex justify-content-between align-items-center border-bottom pb-2 mb-2">
			<h1><i class="fas fa-cocktail"></i> Mister Cocktail</h1>
			<%= link_to "Add a new cocktail", new_cocktail_path, :class => "btn btn-primary" %>
		</div>
	</div>
	<div class="row my-5">
		<% @cocktails.each do |cocktail| %>
			<div class="col-12 col-lg-3 mb-5">
				<%= link_to cocktail_path(cocktail) do %>
					<%= render "shared/card-cocktail", cocktail_within: cocktail %>
				<% end %>	
			</div>
		<% end %>
	</div>
</div>