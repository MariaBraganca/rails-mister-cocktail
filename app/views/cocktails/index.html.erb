<div class="container">
	<h1>All Cocktails</h1>
	<div class="d-flex">
		<% @cocktails.each do |cocktail| %>
			<div class="cocktail-card my-4 mr-4">
				<p><i class="fas fa-cocktail"></i> <%= cocktail.name %></p>
				<%= link_to 'See more details', cocktail_path(cocktail) %>
			</div>		
		<% end %>
	</div>
	<%= link_to "Add a new cocktail", new_cocktail_path, :class => "btn btn-primary" %>
</div>