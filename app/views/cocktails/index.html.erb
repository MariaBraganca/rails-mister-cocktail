<div class="container">
	<!-- Cocktails -->
	<div class="row my-5">
		<% @cocktails.each do |cocktail| %>
			<div class="col-12 col-sm-6 col-md-4 col-lg-3 px-0 drink">
				<% if cocktail.photo.attached? %>
					<%= link_to cocktail_path(cocktail) do %>
						<%= image_tag(cocktail.photo.key, :class => "card-cocktail-img")%>
					<% end %>
					<div class="effect-1"></div>
					<div class="effect-2"></div>
				<% else %>
					<%= link_to cocktail_path(cocktail) do %>
						<div class="card-cocktail" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_path(cocktail.thumb_url) %>)">
							<svg width="100%" height="100%" viewBox="0 0 200 200">
								<path id="curve" 
									d="
										M 20,100
										a 80,80 0 0,1 160,0
										a 80,80 0 0,1 -160,0
										"
								/>
								<text dx="30" dy="5">
									<textPath xlink:href="#curve">
										- <%= cocktail.name %> -
									</textPath>
								</text>
							</svg>
						</div>
					<% end %>
				<% end %>
				<div class="effect-1"></div>
				<div class="effect-2"></div>
			</div>	
		<% end %>
	</div>
</div>
