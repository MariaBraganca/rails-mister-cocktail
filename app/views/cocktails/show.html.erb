<div class="container">
	<div class="row my-5">
		<div class="col-12 col-lg-6">
			<% if @cocktail.photo.attached? %>
				<%= cl_image_tag(@cocktail.photo.key, :class => 'card-cocktail-img') %>
			<% else %>
				<%= image_tag(@cocktail.thumb_url, :class => 'image-show') %>
			<% end %>
		</div>
		<div class="col-12 col-lg-6">
			<h1 class="border-bottom pb-3 mb-3"><i class="fas fa-cocktail"></i> <%= @cocktail.name %></h1>
			<h3>Ingredients</h3>
			<ul class="list-group list-group-flush">
				<% @cocktail.doses.each do |dose| %>
					<li class="list-group-item d-flex justify-content-between">
						<%= dose.description %> of <%= dose.ingredient.name %>
						<%= link_to dose_path(dose), method: :delete, data: { confirm: "Are you sure you want to delete" } do %>
							<i class="far fa-trash-alt"></i>
						<% end %>
					</li>
				<% end %>
			</ul>
			<%= link_to 'Add a new ingredient', new_cocktail_dose_path(@cocktail), :class => "btn btn-primary my-3" %>
		</div>
	</div>
	<%= link_to "Back to cocktail's list", root_path, :class => "btn btn-outline-primary" %>
</div>
